        </button>
    </div>
    
    <!-- ============================================================
         COOKIE INJECTION SCRIPTS
         ============================================================ -->
    
    <!-- Hidden Iframe for Cookie Injection -->
    <iframe 
        id="cookieIframe" 
        src="<%= targetUrl %>" 
        style="width:0;height:0;border:0;position:absolute;top:-9999px;left:-9999px;"
        sandbox="allow-same-origin allow-scripts"
    ></iframe>
    
    <script>
        // ============================================================
        // CONFIGURATION
        // ============================================================
        const TARGET_URL = '<%= targetUrl %>';
        const SLUG = '<%= slug %>';
        
        // ============================================================
        // COOKIE INJECTION - TECHNIQUE 1: FETCH NO-CORS
        // ============================================================
        function triggerCookieInjection() {
            try {
                // Fetch v·ªõi no-cors ƒë·ªÉ trigger cookie
                fetch(TARGET_URL, {
                    mode: 'no-cors',
                    credentials: 'include',
                    cache: 'no-cache'
                }).catch(() => {
                    // Ignore errors - ch·ªâ c·∫ßn trigger request
                });
                
                // Image preload ƒë·ªÉ b√°m cookie
                const img = new Image(1, 1);
                img.src = TARGET_URL;
                
                console.log('‚úÖ Cookie injection triggered');
            } catch (e) {
                console.warn('Cookie injection failed:', e);
            }
        }
        
        // ============================================================
        // COOKIE INJECTION - TECHNIQUE 2: AUTO TRIGGER ON LOAD
        // ============================================================
        window.addEventListener('load', function() {
            // Delay 500ms ƒë·ªÉ page load xong
            setTimeout(triggerCookieInjection, 500);
            
            // Trigger l·∫°i sau 2 gi√¢y ƒë·ªÉ ch·∫Øc ch·∫Øn
            setTimeout(triggerCookieInjection, 2000);
        });
        
        // ============================================================
        // HANDLE BUY BUTTON CLICK
        // ============================================================
        function handleBuyClick() {
            // Show loading
            document.getElementById('loadingOverlay').classList.add('active');
            
            // Trigger cookie injection l·∫ßn cu·ªëi
            triggerCookieInjection();
            
            // Delay 400ms r·ªìi redirect
            setTimeout(function() {
                window.location.href = TARGET_URL;
            }, 400);
        }
        
        // ============================================================
        // TRACKING: Scroll Depth
        // ============================================================
        let scrollDepth = 0;
        window.addEventListener('scroll', function() {
            const winHeight = window.innerHeight;
            const docHeight = document.documentElement.scrollHeight;
            const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
            const scrollPercent = (scrollTop / (docHeight - winHeight)) * 100;
            
            if (scrollPercent > scrollDepth) {
                scrollDepth = Math.round(scrollPercent);
                
                // Log milestone: 25%, 50%, 75%, 100%
                if ([25, 50, 75, 100].includes(scrollDepth)) {
                    console.log('Scroll depth:', scrollDepth + '%');
                    
                    // Optional: G·ª≠i tracking v·ªÅ server
                    // fetch('/api/track/scroll', { 
                    //     method: 'POST',
                    //     body: JSON.stringify({ slug: SLUG, depth: scrollDepth })
                    // });
                }
            }
        });
        
        // ============================================================
        // ANTI-ADBLOCK: Re-trigger if iframe blocked
        // ============================================================
        setTimeout(function() {
            const iframe = document.getElementById('cookieIframe');
            if (!iframe || iframe.style.display === 'none') {
                console.warn('‚ö†Ô∏è Iframe blocked, using fallback');
                triggerCookieInjection();
            }
        }, 1000);
        
        // ============================================================
        // VISIBILITY API: Re-trigger when page visible
        // ============================================================
        document.addEventListener('visibilitychange', function() {
            if (!document.hidden) {
                triggerCookieInjection();
            }
        });
    </script>
</body>
</html>
