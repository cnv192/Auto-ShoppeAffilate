{
  "manifest_version": 3,
  "name": "Shoppe - Facebook Sync",
  "version": "1.0.5",
  "description": "Đồng bộ tài khoản Facebook với hệ thống Shoppe Link Management",

  "permissions": [
    "scripting",
    "activeTab",
    "tabs",
    "cookies"
  ],

  "host_permissions": [
    "*://*.facebook.com/*",
    "http://localhost:3001/*"
  ],

  "background": {
    "service_worker": "bg.js"
  },

  "action": {},

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
