{
  "manifest_version": 3,
  "name": "Shoppe - Facebook Sync",
  "version": "2.0.0",
  "description": "Đồng bộ tài khoản Facebook với hệ thống Shoppe Link Management (v2.0 - Self-Healing)",

  "permissions": [
    "scripting",
    "activeTab",
    "tabs",
    "cookies",
    "storage"
  ],

  "host_permissions": [
    "*://*.facebook.com/*",
    "https://tintuc24h-ivory.vercel.app/*",
    "https://api-tintuc24h.itup.io.vn/*"
  ],

  "background": {
    "service_worker": "bg.js"
  },

  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["inject.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],

  "action": {},

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

